<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.ubc.ca.van_volunteers.VerificationUpload">


    <ImageView
        android:id="@+id/ivDocument1"
        android:src="@drawable/emptyphoto"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <ImageView
        android:id="@+id/ivDocument2"
        android:layout_below="@+id/ivDocument1"
        android:src="@drawable/emptyphoto"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDocument2"
        android:text="@string/upload"/>
</RelativeLayout>
