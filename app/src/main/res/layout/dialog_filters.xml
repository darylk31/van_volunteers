<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Filter Results"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sortby"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spinner_sortby"
            android:layout_alignBottom="@+id/spinner_sortby"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Sort By" />

        <Spinner
            android:id="@+id/spinner_sortby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_sortby"
            android:layout_toRightOf="@+id/tv_sortby"
            android:entries="@array/sort_by_array" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_by_region"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spinner_region"
            android:layout_alignBottom="@+id/spinner_region"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Region" />

        <Spinner
            android:id="@+id/spinner_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_by_region"
            android:layout_toRightOf="@+id/tv_by_region"
            android:entries="@array/city_array" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="OK" />
    </RelativeLayout>

</LinearLayout>